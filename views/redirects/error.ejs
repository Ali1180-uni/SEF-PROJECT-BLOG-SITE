<% layout('/includes/boilerplate') %>
<section class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
          <h2 class="mb-0">
            <i class="fas fa-exclamation-triangle"></i> Error <%= status || 500 %>
          </h2>
        </div>
        <div class="card-body text-center p-5">
          <div class="mb-4">
            <i class="fas fa-times-circle text-danger" style="font-size: 80px;"></i>
          </div>
          <h3 class="card-title text-danger mb-3">Oops! Something went wrong</h3>
          <p class="card-text lead mb-4"><%= message || 'An unexpected error occurred.' %></p>
          <a href="/blogs" class="btn btn-primary btn-lg">
            <i class="fas fa-home"></i> Back to Home
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .card {
    animation: fadeIn 0.5s ease-in;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
